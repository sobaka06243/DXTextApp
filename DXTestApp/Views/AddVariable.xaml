<Window x:Class="DXTestApp.Views.AddVariable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DXTestApp.Views"
        mc:Ignorable="d"
        Title="AddVariable" Height="196.384" Width="273.691" ResizeMode="NoResize">
    <Grid Margin="0,0,0,6">
        <Label Content="Имя переменной"  HorizontalAlignment="Left"  VerticalAlignment="Top" Height="22" Width="96" Margin="10,16,0,0"/>
        <Label Content="Значение переменной"  HorizontalAlignment="Left"  VerticalAlignment="Top" Height="22" Width="125" Margin="10,55,0,0"/>
        <TextBox HorizontalAlignment="Left" x:Name="textBox_NameVar"  VerticalAlignment="Top" Width="54" Height="22" Margin="140,16,0,0" Text="{Binding NameVar}"/>
        <TextBox HorizontalAlignment="Left" x:Name="textBox_ValVar"  VerticalAlignment="Top" Width="54" Height="22" Margin="140,55,0,0" Text="{Binding ValVar}"/>
        <Button Content="Ок" HorizontalAlignment="Left" Margin="105,127,0,0" VerticalAlignment="Top" Width="75" Command="{Binding Click_Ok}"/>
        <Button Content="Отмена" HorizontalAlignment="Left" Margin="185,127,0,0" VerticalAlignment="Top" Width="75" Command="{Binding Click_Cancel}"/>
    </Grid>
</Window>
